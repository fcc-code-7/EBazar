@model EBazarSols.Entities.Category

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form id="EditForm" method="post">
    <div class="form-group hidden">
        <label for="CategoryId">Id</label>
        <input type="text" class="form-control" name="Id" id="CategoryId"  value="@Model.Id"/>
    </div>
    <div class="form-group">
        <label for="CategoryName">Name</label>
        <input type="text" class="form-control" name="Name" id="CategoryName"  value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="CategoryDesc">Description</label>
        <input type="text" class="form-control" name="Description" id="CategoryDesc"  value="@Model.Description">
    </div>
    <button type="button" class="btn rr-primary-btn" id="EditSubmit">Edit</button>
</form>


<script>
    $(document).ready(function () {
        $("#EditSubmit").click(function () {
            var obj = $("#EditForm").serialize();
            console.log(obj);
            $.ajax({
                url: '/Category/Edit',
                method: 'POST',
                data: obj,
                success: function (response) {
                    $("#table_container").html(response);
                    $("#EditForm").hide()
                },
                fail: function (err) {
                    alert(err);
                }
            });
        });
    })

</script>